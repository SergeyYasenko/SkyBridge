.text-block

   &__text
      color black
      max-width 440px
      padding-left 5px
      padding-bottom 15px


.sample-code

   &__text-block
      padding-top 140px
      padding-bottom 140px

      .text-block__title
         border-right 9px solid #40139D
         padding 10px 75px 10px 15px
         margin-right 90px
         margin-top -5px
         max-width 785px

   .bookmark

      &__label
         background-color #40139D
         border-radius 40px 40px 0px 0px
         margin-left 40px
         max-width 315px
         padding 0px 30px
         font-family Inter-Regular
         font-size 20px
         line-height 50px
         color accent

   &__code-block
      margin 0 auto 100px
      max-width 1435px

      &:last-child
         margin 0 auto 200px

   .code
      padding 60px 75px
      max-width 100%

@media only screen and (max-width: lg-breakpoint)

   .sample-code

      &__text-block
         padding-top 50px
         padding-bottom 50px

         .text-block

            &__title
               font-size 32px
               padding-right 30px
               margin-right 30px

            &__text
               font-size 18px
               padding-bottom 0

@media only screen and (max-width: md-breakpoint)

   .sample-code

      &__text-block

         .text-block
            flex-direction column

            &__title
               margin 0px 0px 20px 0px
               padding-right 15px
               padding-left 15px
               border-right 0px columns transparent
               border-bottom 9px solid #40139D
               max-width 500px
               text-align center

            &__text
               text-align center


@media only screen and (max-width: sm-breakpoint)

   .sample-code

      &__text-block
         padding-top 60px
         padding-bottom 60px

         .text-block

            &__title
               font-size 30px
               line-height 45px
               border-bottom 5px solid #40139D

            &__text
               font-size 16px

      .bookmark

         &__label
            margin-left 35px
            max-width 220px
            padding 10px 20px
            font-size 14px
            line-height 28px

      &__code-block
         margin 0 auto 60px
         max-width 1435px

      .code
         padding 30px 20px
         width 100%

         &:last-child
            margin 0 auto 60px

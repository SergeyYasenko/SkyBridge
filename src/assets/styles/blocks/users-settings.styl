.users-settings

   &__row
      display flex
      background-color accent
      position relative

   .line
      margin-bottom 20px

   .form-content

      &--users
         margin-bottom 50px
         justify-content space-between

         .select
            max-width 100%
            width 179px

         .btn-block

            &__btn
               max-width 179px

   .input-block

      .radio-text
         margin-right 75px

         &:last-child
            margin-right 0

      .select

         &__row
            max-width 179px


.title-block

   &--margin

      &:last-child
            .title-block
               &__text
                  cursor pointer

      .title-block

         &__text
            margin-bottom 0px
            padding-bottom 30px

@media only screen and (max-width: lg-breakpoint)

   .users-settings

      .input-block

         .select
               width 100%

               &__row
                  max-width 100%



@media only screen and (max-width: sm-breakpoint)

   .users-settings

      &__row
         flex-direction column
         justify-content center

      .form-content

         &--users
            margin-bottom 25px

            .select
               width 100%

@media only screen and (max-width: xs-breakpoint)

   .users-settings

      .input-block

         .radio-text
            margin-right 40px

      .form-content

         &--users

            .btn-block

               &__btn
                  max-width 100%

      &__row
         padding-bottom 0
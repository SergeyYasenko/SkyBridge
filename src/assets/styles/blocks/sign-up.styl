
.sign-up

   display flex
   flex-grow 1
   flex-shrink 1
   flex-basis auto
   padding-top 160px
   padding-bottom 60px

   .container
      max-width 890px
      margin 0 270px 0 auto

   .title-block
      margin-bottom 80px
      width 100%

   &__info-text
      padding-bottom 20px

   .input-block
      margin-bottom 45px

      &__input-row
         margin-top 5px
         margin-left 10px

   &__row
      min-height 100vh
      display flex
      flex-direction column
      justify-content center

@media only screen and (max-width: lg-breakpoint)

   .sign-up
      padding-top 50px
      padding-bottom 50px

      .container
         margin 0 auto

@media only screen and (max-width: 825px)

   .form-content
      justify-content center

@media only screen and (max-width: sm-breakpoint)

   .additional-row
      flex-direction column
      align-items center

   .sign-up

      &__title
         font-size 30px

      .input-block
         margin-bottom 20px

   .btn-block

      &__btn
         margin-top 30px



@media only screen and (max-width: xs-breakpoint)

   .radio-text
      margin-right 20px
      padding-left 30px

   .select
      margin-right 10px
      max-width 100%

      &__title
         padding 8px 5px
         padding-right 25px

      &__label
         padding 0 10px

   .btn-block

      &__btn
         width 100%

@media only screen and (max-width: 400px)

   .select
      margin-right 0

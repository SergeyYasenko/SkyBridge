.text-block
   display flex
   align-items center
   justify-content center

   &__title
      font-family Inter-ExtraBold
      font-size 50px
      line-height 75px
      color #40139D

   &__text
      font-family Inter-Regular
      font-size 20px
      line-height 35px
      color #919191


.price

   &__btn
      background #2B0972
      max-width 250px
      width 100%
      font-size 20px

   &__period
         font-family HelveticaNeue-Regular
         font-size 12px
         line-height 14px
         color #707070
         padding-left 10px
         padding-bottom 10px

   .text-block
      text-align center
      background-color #F0EFF2
      flex-direction column
      padding-bottom 75px
      padding-top 90px
      padding-right 15px
      padding-left 15px

      &__title
         border-bottom 9px solid #40139D
         padding-bottom 25px
         margin-bottom 25px
         max-width 160px
         width 100%

      &__text
         max-width 410px

   &__container
      max-width 828px

   &__row
      display flex
      justify-content center
      flex-wrap wrap-reverse
      margin-bottom 33px

   &__strong
      font-family Inter-Bold

   .card
      background #FFFFFF 0% 0% no-repeat padding-box
      box-shadow 0px 20px 20px #00000040
      border-radius 0px 0px 50px 50px
      position relative
      padding 60px 20px 40px 62px
      display flex
      flex-direction column
      align-items start
      max-width 380px
      width 100%
      margin-top -13px
      margin-right 38px

      &:last-child
         margin-right 0

      &:before
         content ''
         width 100%
         height 13px
         background #2B0972
         display block
         position absolute
         left 0
         top 0

      &__title
         font-family Inter-Bold
         font-size 25px
         line-height 30px
         color #40139D
         padding-bottom 20px

      &__month
         font-family Inter-Bold
         font-size 49px
         line-height 59px
         color #2B0972
         padding-right 45px
         padding-bottom 30px
         text-align center
         width 100%

      &__text
         font-family Inter-Regular
         font-size 12px
         line-height 15px
         color #2B0972
         padding-left 30px
         padding-bottom 20px
         position relative
         max-width 275px
         margin-bottom 0

         &:before
            content ''
            width 8px
            height 8px
            border-radius 50%
            position absolute
            left 0
            top 5px
            background-color #2B0972
            display block

      &__list
         display flex
         flex-direction column
         flex-basis auto
         flex-grow 1
         flex-shrink 1

      &__item
         font-family Inter-Regular
         font-size 12px
         line-height 15px
         color #2B0972
         padding-left 25px
         position relative
         margin-bottom 15px
         max-width 265px
         background url('../../assets/images/rhombus.svg')
         background-size 15px
         background-repeat no-repeat
         background-position top left

         &:last-child
            padding-bottom 15px

         pre
            margin-bottom 0

   .card

      &--color
         padding-left 50px

         &:before
            background bgbtn

         .card__title
            color #6823F9
            text-align center
            width 100%
            padding-right 30px

         .card__month
            padding-right 30px

         .card__text
            padding-bottom 15px
            margin-bottom 0

         .card__list
            padding-top 10px

         .card__item
            margin-bottom 15px

            &:last-child

               &:before
                  top 5px
                  transform translate(0px 0%)

         .price__btn
            margin-left 15px
            background bgbtn

   &__warning
      font-family Inter-Regular
      font-size 12px
      line-height 15px
      color #919191
      max-width 300px
      padding-left 80px
      text-align center
      padding-bottom 46px


@media only screen and (max-width: sm-breakpoint)

   .price

      .text-block

         &__title
            font-size 35px
            line-height 45px
            border-bottom 4px solid #40139D

         &__text
            font-size 16px

@media only screen and (max-width: 830px)

   .price

      &__row
         flex-direction column-reverse
         align-items center

      .card
         margin-right 0
         margin-left 0
         margin-bottom 33px

      &__warning
         padding-left 0
         margin 0 auto

@media only screen and (max-width: xs-breakpoint)

   .price

      .card
         padding-left 20px
         width 290px

         &--color

            .price__btn
               margin-left 0px

         &:last-child
            margin-right 0

         .card__title
            padding-right 0px
            font-size 24px

         .card__month
            padding-right 0px
            padding-bottom 30px





// ===================================container=======================================
.container
   width-reg
   margin 0 auto
   padding-left 15px
   padding-right 15px


// ===================================input-block=======================================

.input-row

   .input-block

      &:last-child
         margin-bottom 16px

.input-block
   display flex
   flex-direction column
   flex-basis 388px
   margin-bottom 45px
   margin-left 20px

   .error
      border 1px solid red
      background rgba(255, 167, 167, 0.479)

   &__input
      width 100%
      height 40px
      border-radius 5px
      border 1px solid rgba(112, 112, 112, 1)
      padding-left 15px
      padding-right 15px
      font-family Inter-Regular
      font-size 14px
      color rgba(0, 0, 0, 0.7)

   &__info-text
      font-family Inter-Regular
      font-size 20px
      line-height 35px
      color accent
      padding-bottom 15px

   &--sm
      flex-basis auto
      margin-left 0

@media only screen and (max-width: md-breakpoint)

   .input-block
      flex-basis 100%

@media only screen and (max-width: sm-breakpoint)

   .input-block
      margin-bottom 20px

      &--pb
         margin-bottom 0

      &__info-text
         padding-bottom 10px

@media only screen and (max-width: xs-breakpoint)

   .input-block
         margin-left 0

// ===================================btn=======================================

.btn
   background bgbtn
   border-radius 5px
   color accent
   text-align center
   font-size 15px
   line-height 25px
   font-family Inter-Regular
   padding 15px 25px 15px
   display inline-block
   transition all .3s ease
   border none

   &:hover
      color accent
      opacity 0.7

.btn-block
   display flex
   justify-content space-between
   align-items center

   &__btn
      cursor pointer
      border none
      width 264px

      &:active,
      &:focus
         outline none
         border none

      &--fz
         font-size 20px

      &--margin
         margin-top 50px
         margin-left 20px
         width 265px
         font-size 20px

         &:first-child
            margin-left 0

@media only screen and (max-width: sm-breakpoint)

   .btn-block

      &__btn

         &--margin
            width 245px

@media only screen and (max-width: xs-breakpoint)

   .btn-block
      flex-direction column

      &__btn
         width 100%

         &--margin
            width 100%
            margin-left 0
            margin-top 20px
            font-size 15px
            padding 10px 25px
            margin-left 0

            &:last-child
               margin-top 20px

// ===================================radio-button=======================================

.radio
   visibility hidden
   position absolute
   top 0
   left 0

   &:checked
      + .radio-text
         &:after
            transition all 0.5s
            background-color accent

.radio-style
   display inline-block
   font-family Inter-Regular
   font-size 20px
   line-height 35px
   color accent
   &:before
      content ""
      width 20px
      height 20px
      display inline-block
      outline solid 3px accent
      border-radius 50%
      position absolute
      left 0px
      top 5px

.radio-text
   display inline-block
   position relative
   padding-left 50px
   cursor pointer
   padding-bottom 0
   margin-right 55px

   &:last-child
      margin-right 0

   &:after
      content ""
      display block
      width 12px
      height 12px
      position absolute
      left 4px
      top 9px
      border-radius 50%

// ===================================checkbox=======================================

.additional-row
   display flex
   justify-content space-between
   margin-left 20px
   margin-top 10px

.additional
   display flex
   justify-content space-between

   &__remember-me
      display flex
      align-items center

   &__checkbox
      position absolute
      z-index -1
      opacity 0

      &:checked

         + .additional__style

            &::before
               border-color accent
               background url('../../assets/images/check.svg')
               background-size 100%
               background-position 0 0
               background-repeat no-repeat

         + .error
            &::before
               border 1px solid red
               background-color rgba(255, 167, 167, 0.479)

   &__style
      display inline-flex
      align-items center
      font-family Inter-Medium
      font-size 15px
      line-height 25px
      color accent
      cursor pointer

      &:before
         content ''
         display inline-block
         width 27px
         height 27px
         flex-shrink 0
         flex-grow 0
         border 1px solid accentColor
         border-radius 0.25em
         margin-right 15px
         background-repeat no-repeat
         background-position center center
         background-size 50% 50%
         cursor pointer

   &__forgot-password
      font-family Inter-Medium
      font-size 15px
      line-height 25px
      color #6823F9

      &:hover
         color #6823F9
         text-decoration underline

   &__remember-text
      font-family Inter-Medium
      font-size 15px
      line-height 25px
      color accent
      max-width 331px

   &__link
      color #6823F9

      &:hover
         color #6823F9
         text-decoration underline

@media only screen and (max-width: sm-breakpoint)

   .additional

      &__remember-text
         max-width 100%

      &__style
         margin-bottom 0

@media only screen and (max-width: xs-breakpoint)

   .additional-row
      margin-left 0

// ===================================switch=======================================

.switch
   position relative
   display inline-block
   min-width 75px
   width 75px
   height 35px

.switch

   input
      opacity 0
      width 0
      height 0

.slider
   position absolute
   cursor pointer
   top 0
   left 0
   right 0
   bottom 0
   background-color #ccc
   -webkit-transition .4s
   transition .4s

   &:before
      position absolute
      content ""
      height 26px
      width 26px
      left 6px
      bottom 4px
      background-color white
      -webkit-transition .4s
      transition .4s

input

   &:checked

      & + .slider
         background-color #2B0972

input

   &:focus

      & + .slider
         box-shadow 0 0 1px #2B0972

input

   &:checked

      & + .slider

         &:before
            transform translateX(37px)

.slider.round
   border-radius 34px

.slider.round

   &:before
      border-radius 50%




// ===================================drop-down=======================================
.select
   position relative
   height 40px
   background-color #ededed
   border 1px solid #d1d1d1
   border-radius 5px
   font-family Inter-Regular
   font-size 14px
   padding 8px 13px
   color rgba(0, 0, 0, 0.7)
   cursor pointer
   width 100%
   appearance none

   &--color
      background-color accent

   &__row
      display flex
      align-items center
      position relative

   &__arrow
      position relative
      width 100%
      margin-right 35px

      &:last-child
         margin-right 0

      &:before
         position absolute
         top 50%
         right 10px
         transform translate(0, -50%) rotate(45deg)
         content ""
         width 10px
         height 10px
         border-style solid
         border-color black
         border-width 0 2px 2px 0
         z-index 1

@media only screen and (max-width: xs-breakpoint)

   .select
      padding 8px 8px
      padding-right 13px


@media only screen and (max-width: 400px)

   .select

      &__arrow
         margin-right 0
         margin-bottom 30px

         &--mb
            margin-bottom 0

      &__row
         flex-direction column

// ===================================title-block=======================================

.title-block
   margin-bottom 35px
   width 100%

   &__title
      font-family Inter-ExtraBold
      font-size 50px
      line-height 75px
      color accent
      pointer-events none
      margin-bottom 20px

   &__text
      font-family Inter-Regular
      font-size 15px
      line-height 35px
      color accent

   &__link
      color #6823f9

      &:hover
         color #6823f9
         text-decoration underline

.line
   height 3px
   width 100%
   background-color accent
   display block
   margin-bottom 25px

   &--px
      height 1px

@media only screen and (max-width: sm-breakpoint)

   .title-block

      &__title
         font-size 40px


// ===================================form-content=======================================

.form
   margin-left -20px

.form-content
   width 100%
   display flex
   justify-content space-between
   flex-wrap wrap

   &__btn
      width 264px
      border-radius 5px
      margin-right 30px

      & + &
         margin-right 0

   label
      margin-bottom 0

@media only screen and (max-width: sm-breakpoint)

   .input-block

      &__info-text
         font-size 16px

@media only screen and (max-width: xs-breakpoint)

   .form
      margin-left 0



// ===================================popup=======================================

.popup

   position absolute
   width 100%
   height 100vh
   top 0
   left 0
   background rgba(0, 0, 0, 0.7)
   opacity 0
   visibility hidden
   overflow-y hidden

   &.is-active
      opacity 1
      visibility visible

      .popup__content
         transition all 1s ease
         opacity 1
         visibility visible
         top 50%
         transform translate(-50%, -50%) rotate3d(0, 0, 0, 0deg)

   &__content
      width 600px
      position relative
      top 0%
      left 50%
      transform translate(-50%, 0%) rotate3d(1, 0, 0, -45deg)
      background-color #ededed
      text-align center
      padding 50px 20px
      opacity 0
      visibility hidden

   &__title
      font-family Inter-Bold
      font-size 50px
      line-height 75px
      color dark-purple

   &__text
      font-family Inter-Regular
      font-size 24px
      line-height 36px
      color dark-purple

   &__close
      background url('../../assets/images/close.svg')
      background-position center
      background-repeat no-repeat
      background-size 100%
      position absolute
      top 20px
      right 20px
      width 40px
      height 40px

// ===================================code=======================================

pre
   margin-bottom 0

strong
   font-weight bold


.code
   color dark-purple
   background-color #fff
   text-align left
   font-family inherit
   overflow auto
   display flex
   align-items center
   box-shadow 0px 3px 20px #0000004D
   border-radius 40px
   max-width 850px
   width 100%

   &--grey
      background-color #F7F7F7

.code-block
   font-family SourceCodePro-Medium
   font-size 18px
   line-height 24px

@media only screen and (max-width: xs-breakpoint)

   .code-block
      font-size 15px

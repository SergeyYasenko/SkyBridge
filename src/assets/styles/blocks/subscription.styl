
.subscription

   &__row
      display flex
      background-color accent
      padding-bottom 0
      position relative

      .subscription-block
         padding-top 90px
         padding-bottom 90px
         margin 0 auto 0 120px
         padding-left 15px
         padding-right 15px

         &__row
            max-width 835px
            width 100%

         &__title
            font-size 30px
            line-height 75px
            color dark-purple
            padding-bottom 30px
            font-family Inter-ExtraBold
            margin-bottom 0

         &__sub-title
            font-family Inter-Regular
            font-size 20px
            line-height 35px
            color dark-purple
            padding-bottom 25px

         .block-flex
            display flex
            justify-content space-between
            align-items center
            flex-wrap wrap
            margin-bottom 72px

            &__title
               font-family Inter-SemiBold
               font-size 25px
               line-height 35px
               color #2B0972
               padding-right 20px

            &__btn
               background #2B0972
               width 179px
               font-size 20px

         .block-text

            &__title
               font-family Inter-SemiBold
               font-size 25px
               line-height 35px
               color #2B0972
               padding-bottom 20px

            &__text
               font-family Inter-Medium
               font-size 15px
               line-height 25px
               color dark-purple
               max-width 559px

   .line
      background-color #D1D1D1
      margin-bottom 30px

@media only screen and (max-width: lg-breakpoint)

   .subscription

      .subscription-block
         margin 0 auto

@media only screen and (max-width: 855px)

   .block-flex

      &__btn
         margin-top 30px

@media only screen and (max-width: sm-breakpoint)

   .subscription

      &__row
         display flex
         background-color accent
         flex-direction column
         justify-content center

      .subscription-block
         margin 0 auto 0 auto
         padding-top 60px
         padding-bottom 60px

         &__title
            padding-bottom 15px

         &__sub-title
            padding-bottom 15px

         .block-flex
            margin-bottom 25px

            &__title
               padding-right 20px

         .block-text

            &__title
               padding-bottom 10px

      .line
         margin-bottom 15px

   .block-flex

      &__btn
         margin-top 0px

@media only screen and (max-width: xs-breakpoint)

   .subscription

      &__row
         padding-bottom 0

      .subscription-block

         .block-flex

            &__title
               padding-right 0
               padding-bottom 15px

            &__btn
               min-width 100%

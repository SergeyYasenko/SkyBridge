.wrapper
   min-height 100vh
   flex-shrink 0
   display flex
   flex-direction column
   background linear-gradient(116.87deg, #330062 2.26%, #020008 26.63%, #020008 52.8%, #020008 65.22%, #000A6B 100.6%)
   background-size cover

   &--white
      background #fff

   &--bg
      background url('../../assets/images/login-page-bg.jpg')
      background-size cover

      .header
         background rgba(23, 16, 39, 1) 0% 0% no-repeat padding-box
         box-shadow 0px 20px 20px rgba(0, 0, 0, 0.25)
         padding-right 15px

.page
   padding-top 105px
   padding-bottom 270px

   &__row
      display flex
      justify-content space-around
      align-items center
      flex-wrap wrap
      margin-top -40px

   &__column
      text-align center
      margin-top 40px
      padding-left 15px
      padding-right 15px

   &__img-block
      max-width 500px
      margin 0 auto

   &__column-img
      width 100%


   &__column-btn
      background bgbtn
      color colorbtn
      padding 15px 30px
      border-radius 5px
      display inline-block
      font-family Inter-Bold
      transition all 0.3s ease

      &:hover
         color accent
         opacity 0.7

   &__title
      font-weight bold
      font-size 40px
      line-height 49px
      color accent
      padding-bottom 10px
      font-family Inter-Bold
      pointer-events none

   &__sub-title
      font-size 20px
      line-height 24px
      color accent
      padding-bottom 30px
      font-family Inter-Regular
      pointer-events none

@media only screen and (max-width: sm-breakpoint)

   .page
      padding-bottom 50px
      padding-top 50px

      &__img-block
         max-width 350px

      &__row
         margin-top 0
      &__column
         margin-top 0

         img
            max-width 100%

         & + &
            margin-top 50px

      &__title
         padding-top 30px
         font-size 32px
         line-height 1.5em

      &__sub-title
         font-size 18px
         line-height 1.5em
         padding-bottom 0
         margin-bottom 40px
